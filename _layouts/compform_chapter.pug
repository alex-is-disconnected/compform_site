---
permalink: "{{ page.filePathStem }}.html"
---
doctype html
html(lang="en")
	head
		title= title + " | Comp Form"

		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1")

		// google analytics
		script(async src="https://www.googletagmanager.com/gtag/js?id=UA-41378785-2")
		script
			| window.dataLayer = window.dataLayer || [];
			| function gtag(){dataLayer.push(arguments);}
			| gtag('js', new Date());
			| gtag('config', 'UA-41378785-2');

		// open graph
		meta(property="og:site_name" content="compform.net")
		meta(property="og:title" content=title)
		meta(property="og:description" content=description)
		meta(property="og:image" content=image)
		meta(name="twitter:card" content="summary_large_image")

		// favicon
		link(rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32")
		link(rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16")

		// font awesome
		link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome.min.css")

		// styles
		link(rel="stylesheet", href="/css/main.css")

		//scripts
		script(src="/js/main.js")



	body.comp-form
		if !hide_logo
			#logo
				a(href="/")
					include ./_logo.svg


		if hero_title
			#hero.container
				h1= hero_title
				h6 Overview
				p.overview !{description}
				h6 Tools
				p.tools #{software}

		#copy.container.comp-form-copy
			!=content

		#scroll-out.container
